{{!-- цей пустий (div) тег притягує header до рамок картки --}}
{{#each goodsList}}
<div>

  <div class="card mb-3">
    <img src="{{img}}" class="rounded-top p-0">

    <div class="card-body">
      {{#if isHot}}
      <div class="mx-2">
        <div class="badge rounded-pill text-bg-warning">
          HOT!
        </div>
        {{/if}}
        {{#if isNew}}
        <div class="badge rounded-pill text-bg-primary">
          Нове
        </div>
      </div>
      {{/if}}
      {{#if isFast}}
      <div class="mt-3">
        <div class="badge text-bg-success">
          Швидка доставка
        </div>
        {{/if}}
        {{#if isFree}}
        <div class="badge text-bg-secondary">
          Безкоштовна доставка
        </div>
      </div>
      {{/if}}



      <div class="card-title">
        <h6>{{name}}</h6>
      </div>
      {{#with review}}
      {{amount}}
      {{text}}
      {{/with}}

      <h5>{{price}}</h5>
      <p>{{delivery}}</p>

      {{#each buttons}}
      <div class="my-1">
        {{#if isPrimary}}
        <button href="{{link}}" class="btn btn-primary">{{text}}</button>
        {{/if}}
      </div>
      <div class="my-1">
        {{#if isSecondary}}
        <button href="{{link}}" class="btn btn-secondary">{{text}}</button>
        {{/if}}
        {{/each}}
      </div>

      {{#each characteristics}}
      <p class="mt-3">
        {{title}}:
        {{value}}
      </p>
      {{/each}}

    </div>
  </div>
</div>
{{/each}}